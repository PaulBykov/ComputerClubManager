<UserControl x:Class="ComputerClub.View.widgets.IncomeStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerClub.View.widgets"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Баланс: "/>
            <TextBlock Text="{Binding CurrentClubBalance}"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Тут буит график"/>
        </StackPanel>
    </Grid>

</UserControl>
